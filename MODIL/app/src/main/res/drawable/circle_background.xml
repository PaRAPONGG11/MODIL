<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background Color -->
    <solid android:color="#CCCCCC"/> <!-- Ganti warna sesuai keinginan, misalnya warna abu-abu -->

    <!-- Border (Opsional) -->
    <stroke
        android:width="2dp"
        android:color="#999999"/> <!-- Ganti warna sesuai keinginan, misalnya warna abu-abu gelap -->

    <!-- Ukuran Lingkaran -->
    <size
        android:width="150dp"
        android:height="150dp" /> <!-- Sesuaikan dengan ukuran ImageView pada layout -->
</shape>
